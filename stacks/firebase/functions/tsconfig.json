{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "paths": {
      "@eventpipe/*": ["../../../src/*"],
      "@destinations/*": ["../../../destinations/*"],
    }
  },
  "compileOnSave": true,
  "include": ["src", "../../../src/**/*", "../../../destinations/**/*"]
}
